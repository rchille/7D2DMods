<configs>
	<!-- Add a new Recipes named "Rchille_stoveElectric" and "Rchille_resourceElectricStoveRepairKit" -->
	<append xpath="/recipes">
		<recipe name="Rchille_stoveElectric" count="1" tags="learnable">
		        <ingredient name="resourceForgedIron" count="200"/>
        		<ingredient name="resourceMechanicalParts" count="20"/>
			<ingredient name="resourceElectricParts" count="20"/>
			<ingredient name="resourceSpring" count="2"/>
			<ingredient name="Rchille_stoveElectricSchematic" count="1"/>
		</recipe>
		<recipe name="Rchille_resourceElectricStoveRepairKit" count="1" tags="learnable"> 
		        <ingredient name="resourceMechanicalParts" count="5"/>
			<ingredient name="resourceRepairKit" count="2"/>
			<ingredient name="Rchille_stoveElectricSchematic" count="1"/>
		</recipe>
	</append>
</configs>
